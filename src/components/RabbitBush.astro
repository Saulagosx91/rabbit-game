---
interface Props {
  id: string;
}

const { id } = Astro.props;
---

<section class="w-56 relative">
  <img src="/bush.png" alt="Imagen arbusto" class="absolute z-2" />
  <img
    src="/rabbit.png"
    alt="Imagen conejo"
    class="max-w-full h-24 relative left-12 top-6 rabbits-images"
    id={`rabbit-image${id}`}
  />
</section>

<style>
  .activate-animation1 {
    animation: rabbitMove 0.8s normal;
  }

  .activate-animation2 {
    animation: rabbitMove 2s normal;
  }

  .activate-animation3 {
    animation: rabbitMove 3s normal;
  }

  @keyframes rabbitMove {
    from {
      transform: translateY(0px);
    }
    to {
      transform: translateY(-90px);
    }
  }
</style>
